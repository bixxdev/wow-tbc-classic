<!-- 
    itemInfo,
    auctions: auctionInfo.auctions,
    lastModified: auctionInfo.lastModified.toString(),
 -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="/js/functions.js"></script>
    <style>
        table {
            text-align: right;
        }
    </style>
</head>
<body>
<% if(typeof auctions !== "undefined"){ %>
    <p style="font-style:italic">Letztes Update: <%= lastModified %></p>
    <h2>Auctions</h2>
    <% if(auctions.length === 0){ %>
        <p>Es gibt keine Auktionen f√ºr das gesuchte Item.</p>
    <% }else{ %>
        <table>
            <tr><td>Item Name</td><td>Item ID</td><td>Quantity</td><td>Total Buyout</td><td>Single Buyout</td><td>Total Price</td><td>Single Price</td></tr>
            <% auctions.forEach(function(auction){ %>
            <tr>
                <td><%= auction.item.name %>&nbsp;</td>
                <td><%= auction.item.id %>&nbsp;</td>               
                <td><%= auction.quantity %>&nbsp;</td>
                <td><%= auction.buyout.total %>&nbsp;</td>               
                <td><%= auction.buyout.single %>&nbsp;</td>
                <td><%= auction.price.total.gold %>g <%= auction.price.total.silver %>s <%= auction.price.total.copper %>c </td>
                <td><%= auction.price.single.gold %>g <%= auction.price.single.silver %>s <%= auction.price.single.copper %>c</td>
                <% if(auction.buyout.isCheapest == true) { %>
                    <td>*</td>
                <% } %>
            </tr>
            <% }) %>
        </table>
        <% } %>
<% } else { %>
    <p>Item existiert nicht.</p>
<% } %>
</body>
</html>